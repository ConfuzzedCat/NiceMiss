<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
  <settings-container>
    <toggle-setting text='Enabled' value='enabled' apply-on-change='true' bind-value='true' />
    <toggle-setting text='Use Multiplier' value='useMultiplier' hover-hint='When True multiplies the current color scheme colors for missed notes, otherwise uses the left/right colors specified in the configuration of this mod' apply-on-change='true' bind-value='true' />
    <slider-setting active='~useMultiplier' text='Color Multiplier' value='colorMultiplier' increment='0.05' min='0' max='2' hover-hint='The multiplier to use on notes that were missed on the previous play of the song' apply-on-change='true' bind-value='true' />
    <color-setting id='left-color-setting' active='~notuseMultiplier' text='Left Miss Color' value='leftMiss' apply-on-change='true' bind-value='true' />
    <color-setting id='right-color-setting' active='~notuseMultiplier' text='Right Miss Color' value='rightMiss' apply-on-change='true' bind-value='true' />  
</settings-container>
</bg>